@model Proiect_Web_Denisa_Boca.Pages.Dresses.IndexModel

@{
    ViewData["Title"] = "Designer Dresses";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dress[0].Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dress[0].Designer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dress[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dress[0].CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dress[0].Store.StoreName)
            </th>
            <th></th>
        </tr>
