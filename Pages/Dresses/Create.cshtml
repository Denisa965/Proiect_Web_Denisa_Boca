@page
@model Proiect_Web_Denisa_Boca.Pages.Dresses.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Dress</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Dress.Color" class="control-label"></label>
                <input asp-for="Dress.Color" class="form-control" />
                <span asp-validation-for="Dress.Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dress.Designer" class="control-label"></label>
                <input asp-for="Dress.Designer" class="form-control" />
                <span asp-validation-for="Dress.Designer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dress.Price" class="control-label"></label>
                <input asp-for="Dress.Price" class="form-control" />
                <span asp-validation-for="Dress.Price" class="text-danger"></span>
            </div>

            <label asp-for="Dress.StoreID" class="control-label">Store Name</label>
            <select asp-for="Dress.StoreID" class="form-control" asp-items="ViewBag.StoreID">
            </select>
            <span asp-validation-for="Dress.StoreID" class="text-danger"></span>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
